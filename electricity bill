#include <stdio.h>

int main() {
    int x,y,z;
    float a;
    printf("enter the initial reading :");
    scanf("%d",&x);
    printf("enter the final reading :");
    scanf("%d",&y);
    
    z =x-y;
    
    if(z>=200&&z<=500)
    {
        a=z*3.50;
        
    }
    else if (z>=100&&z<=200)
    {
        a=z*2.50;
    }
    else if(z<=100)
    {
        a=z*1.50;
    }
    else{
        printf("the reading is more than final range !! ");
        }
     printf("total bill is: %.2f",z,a);
}